## Download imageMagick for MAC
brew install ghostscript
brew install imagemagick

## Put files below into ppm2jpg.sh, then chmod 777 ppm2jpg.sh
## Modify the cd PATH to ppm file folder 

#!/bin/sh
# ppm2jpg.sh
# converts ppm files in Frames/ to jpg's
cd ./
for f in *.ppm
do
    convert $f ${f%ppm}jpeg
done
rm *.ppm
cd ..
